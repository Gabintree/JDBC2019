<%
	Class.forName("oracle.jdbc.driver.OracleDriver");

	Connection conn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe", "system", "1111");

	String sql = "select * from student";
	PreparedStatement pstmt = conn.prepareStatement(sql);
	
	ResultSet rs = pstmt.executeQuery();
	
	out.println("<table>");
	while (rs.next()) {
	
		out.prinln("<tr><td>STUDENT_ID</td><td>STUDENT_NAME</td><td>STUDENT_EMAIL</td><td>STUDENT_TEL</td><td>DEPARTMENT_ID</td></tr>");	
		out.println(rs.getString(1));
		out.println(rs.getString(2));
		out.println(rs.getString(3));
		out.println(rs.getString(4));
		out.println(rs.getString(5)+"<br>");
	}
	out.println("</table>");
	



%>
